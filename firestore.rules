rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction helper pour vérifier l'authentification
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Fonction helper pour vérifier le rôle
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Fonction helper pour vérifier si c'est le même utilisateur
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Collection users
    match /users/{userId} {
      allow read: if isAuthenticated();
      // Permettre la création si :
      // 1. Un utilisateur crée son propre document (userId == request.auth.uid) - permet la création du premier admin
      // 2. OU c'est un admin qui crée un autre utilisateur
      allow create: if isAuthenticated() && (
        userId == request.auth.uid ||
        isAdmin()
      );
      allow update: if isAuthenticated() && (isAdmin() || isOwner(userId));
      allow delete: if isAuthenticated() && isAdmin();
      // fcmToken : mis à jour via API (Admin SDK) ou par le plombier lui-même
    }
    
    // Collection clients
    match /clients/{clientId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated() && isAdmin();
      // fcmToken : mis à jour via API (Admin SDK) uniquement
    }
    
    // Collection projects
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated() && isAdmin();
    }
    
    // Collection planning
    match /planning/{entryId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Collection documents
    match /documents/{documentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated() && isAdmin();
    }
    
    // Collection manualRevenues (revenus manuels)
    match /manualRevenues/{revenueId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Collection recruitments (candidatures de recrutement)
    match /recruitments/{recruitmentId} {
      allow read: if isAuthenticated() && isAdmin();
      allow create: if true; // Permet la création via l'API webhook (sans authentification)
      allow update, delete: if isAuthenticated() && isAdmin();
    }

    // Collection autoMessages (messages automatiques)
    match /autoMessages/{messageId} {
      allow read: if isAuthenticated(); // Tous les utilisateurs authentifiés peuvent lire
      allow create, update, delete: if isAuthenticated() && isAdmin(); // Seuls les admins peuvent modifier
    }

    // Collection sentMessages (historique des messages envoyés)
    match /sentMessages/{sentMessageId} {
      allow read: if isAuthenticated(); // Tous les utilisateurs authentifiés peuvent lire
      allow create: if true; // Permet la création via l'API route (Firebase Admin SDK bypass les règles)
      allow update, delete: if isAuthenticated() && isAdmin(); // Seuls les admins peuvent modifier/supprimer
    }

    // Collection instantRequests (commandes instantanées client)
    // Création via API (Admin SDK). Lecture/mise à jour par plombiers (Firebase Auth).
    // Lecture : tout utilisateur connecté (admin ou plombier) pour voir les demandes en_attente.
    match /instantRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if false; // Uniquement via API route (Admin SDK)
      allow update: if request.auth != null; // Plombiers peuvent accepter / API accept-offer
      allow delete: if isAuthenticated() && isAdmin();
      // Sous-collection : position du plombier (suivi en temps réel). Lecture : auth. Écriture : plombier assigné uniquement.
      match /plombierLocation/{locationId} {
        allow read: if request.auth != null;
        allow create, update: if request.auth != null && get(/databases/$(database)/documents/instantRequests/$(requestId)).data.plombierId == request.auth.uid;
        allow delete: if false;
      }
    }

    // Collection instantOffers (offres plombiers sur une demande instantanée, style inDrive)
    // Création : plombier authentifié, plombierId == request.auth.uid.
    // Lecture : tout utilisateur authentifié. Mise à jour (accepte/refuse) : uniquement via API (Admin SDK).
    match /instantOffers/{offerId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.plombierId == request.auth.uid;
      allow update, delete: if false; // Uniquement via API route (accept-offer)
    }

    // Collection clientPromoCodes (codes promo activés par l'admin pour les clients)
    // L'accès client passe par les API routes (Firebase Admin SDK)
    match /clientPromoCodes/{promoId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Collection suppliers (fournisseurs agréés)
    match /suppliers/{supplierId} {
      allow read, create, update, delete: if isAuthenticated() && isAdmin();
    }

    // Collection reviews (avis client/plombier style inDrive)
    // Création uniquement via API route (Admin SDK)
    match /reviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if false;
    }

    // Collection partRequests (demandes de pièces)
    // Lecture : plombier (ses demandes) ou admin (toutes). Création : plombier (ses demandes). Mise à jour : admin uniquement.
    match /partRequests/{requestId} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        (get(/databases/$(database)/documents/partRequests/$(requestId)).data.plombierId == request.auth.uid)
      );
      allow create: if isAuthenticated() && request.resource.data.plombierId == request.auth.uid;
      allow update, delete: if isAuthenticated() && isAdmin();
    }
  }
}
